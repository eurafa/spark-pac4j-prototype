<!DOCTYPE html>
<html lang="en">
<head>
	<title>Done - Turma</title>
	{{> meta}}
	{{> stylesheet}}
</head>

<body class="navbar-fixed sidebar-nav fixed-nav {{^profile.attributes.isAdmin}}aside-menu-open{{/profile.attributes.isAdmin}}">
	{{> header}}
	{{> menu}}

    <main class="main">

        <ol class="breadcrumb">
            <li class="breadcrumb-item">Home</li>
            <li class="breadcrumb-item active">Turma</li>
        </ol>

        <div class="container-fluid">
            <div class="animated fadeIn">
			    <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <strong>Turma </strong>Form
                            </div>
                            <div class="card-block">
                                <form action="" method="post" class="form-horizontal ">
                                    <div class="form-group row">
                                        <label class="col-md-3 form-control-label" for="hf-email">Nome</label>
                                        <div class="col-md-9">
                                            <input id="hf-email" name="hf-email" class="form-control" type="email">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-md-3 form-control-label" for="hf-password">Descrição</label>
                                        <div class="col-md-9">
                                            <input id="hf-password" name="hf-password" class="form-control" type="password">
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div class="card-footer">
                                <button type="submit" class="btn btn-sm btn-primary"><i class="fa fa-dot-circle-o"></i> Salvar</button>
                                <button type="reset" class="btn btn-sm btn-danger"><i class="fa fa-ban"></i> Cancelar</button>
                            </div>
                        </div>
                    </div>
			    </div>
			</div>
        </div>
    </main>

	{{^profile.attributes.isAdmin}}
		{{> sidebar}}
	{{/profile.attributes.isAdmin}}		
	{{> footer}}
	{{> javascript}}
</body>
</html>